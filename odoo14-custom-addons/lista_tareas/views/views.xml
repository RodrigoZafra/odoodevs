<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Definimos como es la vista explicita de la litas-->
    <record model="ir.ui.view" id="lista_tareas.list">
      <field name="name">lista_tareas list</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <tree decoration-success="realizada == True">
          <field name="avatar" widget="image" class="oe_avatar"/>
          <field name="tarea"/>
          <field name="estado" widget="percentpie"/>
          <field name="prioridad"/>
          <field name="urgente"/>
          <field name="realizada"/>
          <field name="fecha"/>
        </tree>
      </field>
    </record>

  <!--Esto es lo q hace q no funcione-->
    <record model="ir.ui.view" id="lista_tareas.calender">
        <field name="model">lista tareas calendar</field>
        <field name="arch" type="xml">
            <!-- Definimos las fechas (inicio y final)
                asi como colo del proyecto para la vista calendario
                PD: el unico dato obligatorio es "date_start"
            -->
            <calendar date_start="date_assign" date_stop="date_end" color="project_id">
                <field name="name" />
                <field name="user_id" />
            </calendar>
        </field>
    </record>


    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos 
    https://www.odoo.com/documentation/14.0/developer/reference/addons/actions.html
    -->

    <record model="ir.actions.act_window" id="lista_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">lista_tareas.lista_tareas</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Tareas" id="lista_tareas.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Usuarios" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>
    <menuitem name="Grupos" id="lista_tareas.menu_2" parent="lista_tareas.menu_root"/>
    <menuitem name="Community" id="lista_tareas.menu_3" parent="lista_tareas.menu_root"/>
    <menuitem name="Sobre nosotros" id="lista_tareas.menu_4" parent="lista_tareas.menu_root"/>
  
    <!-- actions -->

    <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1"
              action="lista_tareas.action_window"/>
    
    <menuitem name="Mostrar lista" id="lista_tareas.menu_2_list" parent="lista_tareas.menu_2"
              action="lista_tareas.action_window"/>

    <menuitem name="Local" id="lista_tareas.menu_3_list" parent="lista_tareas.menu_3"
              action="lista_tareas.action_window"/>

    <menuitem name="Global" id="lista_tareas.menu_4_list" parent="lista_tareas.menu_3"
              action="lista_tareas.action_window"/>

    <menuitem name="Vamos a aprobar" id="lista_tareas.menu_5_list" parent="lista_tareas.menu_4"
              action="lista_tareas.action_window"/>



  </data>
</odoo>