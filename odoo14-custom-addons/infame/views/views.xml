<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="infame.list">
      <field name="name">infame list</field>
      <field name="model">infame.infame</field>
      <field name="arch" type="xml">
      <tree decoration-danger="score&lt;25">
        <field name="title"/>
        <field name="date"/>
        <field name="score" widget="percentpie"/>
        <field name="distributor"/>
        <field name="publisher"/>
        <field name="favs"/>
      </tree>
      </field>
    </record>



    <!-- actions opening views on models -->

      <record model="ir.actions.act_window" id="infame.action_window">
        <field name="name">infame window</field>
        <field name="res_model">infame.infame</field>
        <field name="view_mode">tree,form</field>
      </record>


    <!-- server action to the one above -->
