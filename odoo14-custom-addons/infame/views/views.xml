    }
    </field>
    </record>
    -->

    <!-- Top menu item -->

      <menuitem name="infame" id="infame.menu_root"/>

    <!-- menu categories -->

      <menuitem name="Website" id="infame.menu_1" parent="infame.menu_root"/>

      <menuitem name="Forum" id="infame.menu_2" parent="infame.menu_root"/>

    <!-- actions -->

      <menuitem name="Web" id="infame.menu_11" parent="infame.menu_1"
      action="infame.action_window"/>

      <menuitem name="Films" id="infame.menu_12" parent="infame.menu_2"
      action="infame.action_window"/>

      <menuitem name="Games" id="infame.menu_13" parent="infame.menu_2"
      action="infame.action_window"/>

  </data>
</odoo>